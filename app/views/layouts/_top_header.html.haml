.service-header
  .div-nav
    %nav.navbar.navbar-static-top.navbar-expand-lg.navbar-light
      %div
        = image_tag('coffee.jpg', class: "d-inline-block align-top logo-img")
        = link_to home_path, id: 'logo-text', class: 'navbar-brand home-page-text' do
          EUREKA
          %br/
          CAFFEE
      %button.navbar-toggler{ 'aria-controls' => 'navbar-nav', 'aria-expanded' => 'false', 'aria-label' => 'Toggle navigation', 'data-target' => '#navbar-nav', 'data-toggle' => 'collapse', :type => 'button' }
        %span.navbar-toggler-icon
      #navbar-nav.collapse.navbar-collapse.bg-custom
        %ul#menu-top.navbar-nav.ml-auto
          %li.nav-item.active
            = link_to home_path, class: 'nav-link home-page-text' do
              %span.middot ·
              HOME
          - if logged_in?
            %li.nav-item.dropdown
              %a.dropdown-toggle.home-page-text.nav-link{ 'data-toggle' => 'dropdown', :href => '#' }
                Account
              %ul.dropdown-menu.home-page-text
                %li= link_to 'Profile', current_user
                %li= link_to 'Settings', edit_user_path(current_user)
                %li
                  = link_to 'Log out', logout_path, method: :delete
            - if current_user.admin? && !current_user?(@user)
              %li.nav-item.active
                = link_to home_path, class: 'nav-link home-page-text' do
                  %span.middot ·
                  Dashboard
          - else
            %li.nav-item
              = link_to 'Log in', login_path, :class =>'nav-link home-page-text'
            %li.nav-item
              = link_to 'Sign up', new_user_path, :class =>'nav-link home-page-text'
  .jumbotron.text-center
    %div
      %h1.title.home-page-text Eureka Caffee
      - 2.times do
        = image_tag 'lines.png', class: 'zig-zag-line-filter'
      %i.fas.fa-utensils
      - 2.times do
        = image_tag 'lines.png', class: 'zig-zag-line-filter'
      %div
      %p.description.home-page-text The go-to place for ordering food!
