%h1 Listing products
%div.p-5.justify-content-center
  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th Price
        %th.w-25 Image
        %th
        %th

    %tbody
      - @products.each do |product|
        %tr
          %td= product.name
          %td= product.price
          %td= image_tag(product.image_url, class: 'w-75')
          %td= link_to 'Edit', edit_admin_product_path(product)
          %td= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }


= link_to 'New Product', new_admin_product_path
